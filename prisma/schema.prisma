datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Arch {
  ARM64
  AMD64
}

model User {
  id      String  @id
  email   String  @unique
  name    String?
  isAdmin Boolean @default(false)
}

model Image {
  dockerImage   String   @id @unique
  friendlyName  String
  supportedArch Arch[]
  category      String[]
  icon          String
}
