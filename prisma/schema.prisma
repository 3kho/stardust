datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Arch {
  ARM64
  AMD64
}

model User {
  id      String    @id
  email   String    @unique
  name    String?
  isAdmin Boolean   @default(false)
  Session Session[]
}

model Image {
  dockerImage   String   @id @unique
  friendlyName  String
  pulled        Boolean? @default(false)
  supportedArch Arch[]
  category      String[]
  icon          String
}

model Session {
  id          String   @id
  dockerImage String
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}
